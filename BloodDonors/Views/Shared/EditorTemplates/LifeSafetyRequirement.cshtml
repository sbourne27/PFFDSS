@model BloodDonors.Models.LifeSafetyRequirement

@Html.LabelFor(x => x, "High")
@if (Model == BloodDonors.Models.LifeSafetyRequirement.High)
{
    @Html.RadioButtonFor(x => x, (int)BloodDonors.Models.LifeSafetyRequirement.High, new { @checked = "checked" });
}
else
{
