@Html.LabelFor(x => x, "Low Elevation Black Spruce: Valleys or Side Slopes; typically means high ice content fine grained permafrost, pooyl drained.")
@if (Model == BloodDonors.Models.VegetationType.LowElevationBlackSpruce)
{
    @Html.RadioButtonFor(x => x, (int)BloodDonors.Models.VegetationType.LowElevationBlackSpruce, new { @checked = "checked" });
}
else
{
    @Html.RadioButtonFor(x => x, (int)BloodDonors.Models.VegetationType.LowElevationBlackSpruce);
