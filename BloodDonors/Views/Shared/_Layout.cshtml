<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
            
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/3.0.0/jquery.min.js" type="text/javascript"></script>
        <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/jquery-ui.min.js" type="text/javascript"> </script> 
        <script src="http://dev.virtualearth.net/mapcontrol/mapcontrol.ashx?v=6.3" type="text/javascript"></script>
        <script src="http://openlayers.org/en/v3.2.1/resources/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
        <script src="~/Scripts/BloodDonors.js" type="text/javascript"></script>

 
        <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <link href="@System.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/Content/css")" rel="stylesheet" type="text/css" />
        <link href="@System.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/Content/themes/base/css")" rel="stylesheet" type="text/css" />
        <script src="@System.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/Scripts/js")"></script>
        <meta name="viewport" content="width=device-width" />
    </head>
    @*<body background="~/Images/pfrost.jpg" style="background-size:cover;">*@
        <body>
        @*<div id="PFFDSSHomeOverlay">

        </div>*@

        <header >
            <div style="min-width:100%; min-height:28px; background-color:transparent;">
                <div class="content-wrapper" style="background-color:transparent;">
                    <div class="float-left">
                        <h3 id="PageTitle" style="display:inline-block; margin:0px; padding:0px; padding-left:10px;"></h3>
                    </div>
                    <div class="float-right">
                        <nav>
                            <ul id="menu" style="display:inline-block;">
                                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                                <li>@Html.ActionLink("Assessment", "Index", "Wizard")</li>
                                @*<li>@Html.ActionLink("Donors", "Index", "Donor")</li>*@
                                <li>@Html.ActionLink("About", "About", "Home")</li>
                                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>

                            </ul>

                            <section id="login" style="display:inline-block;">
                                @Html.Partial("_LoginPartial")
                            </section>


                        </nav>



                    </div>
                </div>
            </div>
            
        </header>
        <div id="body" style="background-color:transparent; min-height:700px;">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix" style="min-height:700px; background-color:transparent;">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper" style="float:left; width:100%; text-align:center; background-color:transparent; margin-top:1px;">
                @*<div style="background-color:white; width:100%; height:100%; margin-top:1px;">
                    <img src='@Url.Content("~/Images/LogoBand.png")' />
                </div>*@
                
                @*<div class="float-left">
                    <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
                </div>*@
                @*<div class="float-right">
                    <ul id="social">
                        <li><a href="http://facebook.com" class="facebook">Facebook</a></li>
                        <li><a href="http://twitter.com" class="twitter">Twitter</a></li>
                    </ul>
                </div>*@
            </div>
        </footer>
    </body>
</html>
